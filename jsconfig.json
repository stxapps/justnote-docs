{
  "exclude": [".next", "out"],
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "noEmit": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
